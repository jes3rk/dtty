{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": false,
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "types": ["@cloudflare/workers-types", "@types/jest"]
  },
  "include": ["src", "testing"],
  "exclude": [".yarn"]
}
